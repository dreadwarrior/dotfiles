#!/bin/sh
#
# -*- Mode: sh; coding: utf-8; indent-tabs-mode: nil; tab-width: 2 -*-
# vim:set expandtab tabstop=2 fenc=utf-8 fileformat=unix filetype=sh:
#
# Creates a unix socket with socat on Darwin machines
#
# @see https://youtrack.jetbrains.com/oauth?state=%2Fissue%2FIDEA-153973#comment=27-1484220

PORT="${1:-2375}"

socat -d -d TCP-LISTEN:"${PORT}",reuseaddr,fork,bind=localhost UNIX-CONNECT:/var/run/docker.sock

